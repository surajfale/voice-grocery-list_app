# -----------------------------------------------------------------------------
# Backend API
# -----------------------------------------------------------------------------
PORT=3001
NODE_ENV=development
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/voice-grocery-list
CORS_ORIGIN=http://localhost:5173
TRUST_PROXY=false
RATE_LIMIT_KEY_SOURCE=auto

# -----------------------------------------------------------------------------
# OCR Microservice (EasyOCR)
# -----------------------------------------------------------------------------
OCR_SERVICE_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Email / Notifications
# -----------------------------------------------------------------------------
RESEND_API_KEY=your_resend_api_key_here
EMAIL_FROM="Grocery List App <noreply@example.com>"
FRONTEND_URL=http://localhost:5173

# -----------------------------------------------------------------------------
# Authentication / Security
# -----------------------------------------------------------------------------
JWT_SECRET=replace_with_secure_random_value

# -----------------------------------------------------------------------------
# RAG / AI Pipeline
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-key
RAG_EMBEDDINGS_MODEL=text-embedding-3-small
RAG_COMPLETIONS_MODEL=gpt-4o-mini
RAG_TOP_K=5
RAG_CHUNK_SIZE=512
RAG_VECTOR_INDEX=receiptVectorIndex
EMBEDDINGS_VERSION=1

# -----------------------------------------------------------------------------
# Frontend (Vite)
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:3001/api
